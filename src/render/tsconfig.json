{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "rootDir": "./scripts",
    "typeRoots": [
      "./scripts/types"
    ]
  },
  "include": [
    "./scripts/**/*.ts",
    "./scripts/**/*.d.ts"
  ],
}
